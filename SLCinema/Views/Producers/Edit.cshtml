@model Producer

@{
    ViewData["Title"] = "Update Producer";
}

<div class="container pt-0">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="row">
                <h3 class="text-center text-success">Update Producer</h3>
            </div>

            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group text-center">
                            <img class="border-info rounded-circle" style="max-width:150px;" id="ProfilePictureURLPreview" />
                        </div>

                        <div class="form-goup my-2">
                            <label asp-for="ProfilePictureURL" class="control-lable"></label>
                            <input asp-for="ProfilePictureURL" class="form-control" />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>

                        <div class="form-goup my2">
                            <label asp-for="FullName" class="control-lable"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-goup my-2">
                            <label asp-for="Bio" class="control-lable"></label>
                            <input asp-for="Bio" class="form-control" />
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3 row">
                            <div class="col-md-6">
                                <input type="submit" value="Update" class="btn btn-outline-success form-control" />
                            </div>
                            <div class="col-md-6">
                                <a class="btn btn-outline-secondary form-control" asp-action="Index">Show All</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
        var output = document.getElementById('ProfilePictureURLPreview');
        output.src = $('#ProfilePictureURL').val();
    })     
    </script>
}