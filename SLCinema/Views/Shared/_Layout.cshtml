<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SL සිනෙමා</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-success border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand text-warning" asp-area="" asp-controller="Movies" asp-action="index"><h4><strong><i>SL - සිනෙමා</i></strong></h4></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Movies" asp-action="index">
                                <i class="badge-info bi-film"></i> Movies
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" area-expanded="false">
                                    <i class="bi bi-gear"></i> Management
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                    <a class="dropdown-item" asp-controller="Cinemas" asp-action="index">
                                        <i class="bi bi-camera-reels"></i> Cinemas
                                    </a>

                                    <a class="dropdown-item" asp-controller="Producers" asp-action="index">
                                        <i class="bi bi-headset"></i> Producers
                                    </a>

                                    <a class="dropdown-item" asp-controller="Actors" asp-action="index">
                                        <i class="bi bi-person-square"></i> Actors
                                    </a>

                                </div>
                            </li>
                        }

                    </ul>

                    <form class="form-inline my-2 my-lg-0 ml-auto" asp-controller="Movies" asp-action="Filter">
                        <input name="searchString" type="text" class="form-control" placeholder="Search for a movie..." />
                        <button class="btn btn-outline-light my-2 my-sm-0 ml-2" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>

                    <partial name="_Identity.cshtml" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid pt-4 my-5">
        <main role="main">
            @RenderBody()
            <br />
        </main>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container-fluid">
            &copy; 2022 - SLCinema
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
