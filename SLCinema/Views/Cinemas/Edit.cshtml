@model Cinema

@{
    ViewData["Title"] = "Update Cinema";
}

<div class="container pt-0">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="row">
                <h3 class="text-center text-success">Update Cinema</h3>
            </div>

            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group text-center">
                            <img class="border-info rounded-circle" style="max-width:150px;" id="CinemaLogoPreview" />
                        </div>

                        <div class="form-goup my-2">
                            <label asp-for="Logo" class="control-lable"></label>
                            <input asp-for="Logo" class="form-control" />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>

                        <div class="form-goup my2">
                            <label asp-for="Name" class="control-lable"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-goup my-2">
                            <label asp-for="Description" class="control-lable"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3 row">
                            <div class="col-md-6">
                                <input type="submit" value="Update" class="btn btn-outline-success form-control" />
                            </div>
                            <div class="col-md-6">
                                <a class="btn btn-outline-secondary form-control" asp-action="Index">Show All</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
        var output = document.getElementById('CinemaLogoPreview');
        output.src = $('#Logo').val();
    })     
    </script>
}