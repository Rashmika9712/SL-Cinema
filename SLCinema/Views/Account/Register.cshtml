@using SLCinema.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Sign up for a new account";
}

<div class="mt-2">
    <div class="row">
        <div class="col-md-4 offset-4">

            <div class="text-center">
                <h4 class="text-success">Sign up for a new account</h4>
            </div>

            @if(TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger" >
                    <span><b>Sorry!</b> - @TempData["Error"] </span>
                </div>

            }

            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="FullName" class="form-lable"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmailAddress" class="form-lable"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-lable"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-lable"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <a class="btn btn-outline-secondary form-control" asp-controller="Movies" asp-action="Index">Cancel</a>
                    </div>
                    <div class="col-md-6">
                        <input class="btn btn-outline-success form-control" type="submit" value="Sign up" />
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>